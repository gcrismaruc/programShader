#version 430
//in vec4 color;

in vec2 texCoord;				
uniform sampler2DRect texture;

out vec4 fcolor;
void main()
{
	//vec4 tex = vec4(texture2DRect(texture, texCoord).r) + vec4(0.1, 0.04, 0.2, 1.0);

	vec2 tex =  texCoord;

    //fcolor = tex;
	if(tex.x < 0) {
		tex.x *= -1;
	}

	if(tex.y < 0) {
		tex.y *= -1;
	}

	fcolor = vec4(tex.x, tex.y, tex.x + tex.y, 1.0);
}